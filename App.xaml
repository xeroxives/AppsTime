<Application x:Class="AppsTime.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:AppsTime.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <converters:IsRunningColorConverter x:Key="IsRunningColorConverter"/>
        <!-- ════════════════════════════════════════════════════════ -->
        <!-- ЦВЕТА (Color)                                            -->
        <!-- ════════════════════════════════════════════════════════ -->

        <!-- Фон -->
        <Color x:Key="WindowBackgroundStart">#FF565656</Color>
        <Color x:Key="WindowBackgroundEnd">#FF353535</Color>
        <Color x:Key="PanelBackground">#FF404040</Color>
        <Color x:Key="SelectedBackground">#FF505050</Color>
        <Color x:Key="HoverBackground">#FF484848</Color>

        <!-- Текст -->
        <Color x:Key="TextPrimary">#FFFFFFFF</Color>
        <Color x:Key="TextSecondary">#FF888888</Color>
        <Color x:Key="ButtonText">#FFFFFFFF</Color>
        <Color x:Key="RunningProcessTextColor">#FF40C575</Color>

        <!-- Кнопки -->
        <Color x:Key="ButtonSave">#FF27AE60</Color>
        <Color x:Key="ButtonSaveHover">#FF2AB365</Color>
        <Color x:Key="ButtonSavePressed">#FF249555</Color>

        <Color x:Key="ButtonExclude">#FFC0392B</Color>
        <Color x:Key="ButtonExcludeHover">#FFC94435</Color>
        <Color x:Key="ButtonExcludePressed">#FFA93226</Color>

        <Color x:Key="ButtonInfo">#FF288CC8</Color>
        <Color x:Key="ButtonInfoHover">#FF3095D0</Color>
        <Color x:Key="ButtonInfoPressed">#FF227AB0</Color>

        <Color x:Key="ButtonDefault">#FF505050</Color>
        <Color x:Key="ButtonDefaultHover">#FF585858</Color>
        <Color x:Key="ButtonDefaultPressed">#FF484848</Color>

        <Color x:Key="ButtonDisabled">#FF505050</Color>
        <Color x:Key="ButtonDisabledText">#FF888888</Color>

        <!-- Элементы управления -->
        <Color x:Key="TextBoxBackground">#FF404040</Color>
        <Color x:Key="TextBoxText">#FFFFFFFF</Color>
        <Color x:Key="TextBoxBorder">#FF606060</Color>

        <Color x:Key="ListBoxBackground">#FF404040</Color>
        <Color x:Key="ListBoxText">#FFFFFFFF</Color>
        <Color x:Key="ListBoxBorder">#FF606060</Color>

        <!-- ════════════════════════════════════════════════════════ -->
        <!-- КИСТИ (SolidColorBrush)                                  -->
        <!-- ════════════════════════════════════════════════════════ -->

        <!-- Фон -->
        <SolidColorBrush x:Key="WindowBackgroundStartBrush" Color="{StaticResource WindowBackgroundStart}"/>
        <SolidColorBrush x:Key="WindowBackgroundEndBrush" Color="{StaticResource WindowBackgroundEnd}"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackground}"/>
        <SolidColorBrush x:Key="SelectedBackgroundBrush" Color="{StaticResource SelectedBackground}"/>
        <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackground}"/>

        <!-- Текст -->
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="ButtonTextBrush" Color="{StaticResource ButtonText}"/>
        <SolidColorBrush x:Key="RunningProcessTextColorBrush" Color="{StaticResource RunningProcessTextColor}"/>

        <!-- Кнопки - основные -->
        <SolidColorBrush x:Key="ButtonSaveBrush" Color="{StaticResource ButtonSave}"/>
        <SolidColorBrush x:Key="ButtonSaveHoverBrush" Color="{StaticResource ButtonSaveHover}"/>
        <SolidColorBrush x:Key="ButtonSavePressedBrush" Color="{StaticResource ButtonSavePressed}"/>

        <SolidColorBrush x:Key="ButtonExcludeBrush" Color="{StaticResource ButtonExclude}"/>
        <SolidColorBrush x:Key="ButtonExcludeHoverBrush" Color="{StaticResource ButtonExcludeHover}"/>
        <SolidColorBrush x:Key="ButtonExcludePressedBrush" Color="{StaticResource ButtonExcludePressed}"/>

        <SolidColorBrush x:Key="ButtonInfoBrush" Color="{StaticResource ButtonInfo}"/>
        <SolidColorBrush x:Key="ButtonInfoHoverBrush" Color="{StaticResource ButtonInfoHover}"/>
        <SolidColorBrush x:Key="ButtonInfoPressedBrush" Color="{StaticResource ButtonInfoPressed}"/>

        <SolidColorBrush x:Key="ButtonDefaultBrush" Color="{StaticResource ButtonDefault}"/>
        <SolidColorBrush x:Key="ButtonDefaultHoverBrush" Color="{StaticResource ButtonDefaultHover}"/>
        <SolidColorBrush x:Key="ButtonDefaultPressedBrush" Color="{StaticResource ButtonDefaultPressed}"/>

        <!-- Элементы управления -->
        <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="{StaticResource TextBoxBackground}"/>
        <SolidColorBrush x:Key="TextBoxTextBrush" Color="{StaticResource TextBoxText}"/>
        <SolidColorBrush x:Key="TextBoxBorderBrush" Color="{StaticResource TextBoxBorder}"/>

        <SolidColorBrush x:Key="ListBoxBackgroundBrush" Color="{StaticResource ListBoxBackground}"/>
        <SolidColorBrush x:Key="ListBoxTextBrush" Color="{StaticResource ListBoxText}"/>
        <SolidColorBrush x:Key="ListBoxBorderBrush" Color="{StaticResource ListBoxBorder}"/>

    </Application.Resources>
</Application>