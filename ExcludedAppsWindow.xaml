<Window x:Class="AppsTime.ExcludedAppsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsTime"
        mc:Ignorable="d"
        Title="Excluded Apps" 
        Height="470" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{x:Null}">
    <Window.Resources>
        <Style x:Key="RestoreButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF505050"/>
            <Setter Property="Foreground" Value="#FF888888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Background" Value="#FF27AE60"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF505050" Offset="0"/>
                <GradientStop Color="#FF353535" Offset="0.511"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Label Grid.Row="0" 
               Content="Исключённые приложения:" 
               Foreground="White" 
               FontWeight="Bold"
               FontSize="16"
               Margin="20,15,20,10"/>

        <!-- Список -->
        <ListBox x:Name="ListBoxExcluded" 
                 Grid.Row="1"
                 Background="#FF404040"
                 Foreground="White"
                 BorderBrush="#FF606060"
                 BorderThickness="1"
                 Margin="20,10,20,10"
                 SelectionChanged="ListBoxExcluded_SelectionChanged">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="5,3"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF505050"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="20,10,20,15">
            <Button x:Name="ButtonRestore" 
        Content="Восстановить" 
        Style="{StaticResource RestoreButtonStyle}"
        Click="ButtonRestore_Click"
        IsEnabled="False"/>
            <Button x:Name="ButtonClose" 
                    Content="Закрыть" 
                    Width="110" Height="35"
                    Background="#FF505050" Foreground="White"
                    BorderThickness="0" FontSize="13"
                    Click="ButtonClose_Click"/>
        </StackPanel>
    </Grid>
</Window>