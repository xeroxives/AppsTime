<Window x:Class="AppsTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppsTime"
        xmlns:behaviors="clr-namespace:AppsTime.Behaviors"
        mc:Ignorable="d"
        Title="AppsTime" Height="450" Width="800" MinHeight="300" MinWidth="700">

    <Grid Background="{DynamicResource WindowBackgroundStartBrush}">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="315"/>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Label Content="All Time List:" 
               Foreground="{StaticResource TextPrimaryBrush}" 
               Margin="20,0,0,0" FontWeight="Bold"/>

        <!-- ListBox -->
        <ListBox x:Name="ListBoxAllTime" 
                 Grid.Column="0" 
                 Grid.Row="0" 
                 Grid.RowSpan="3"
                 Margin="20,30,20,10"
                 ItemsSource="{Binding AllTimeStats}"
                 Background="Transparent"
                 Foreground="{StaticResource ListBoxTextBrush}"
                 BorderThickness="0"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 behaviors:SmoothScrollBehavior.EnableSmoothScroll="True"
                 SelectionChanged="ListBoxAllTime_SelectionChanged"
                 HorizontalContentAlignment="Stretch">
            <ListBox.ContextMenu>
                <ContextMenu x:Name="ListBoxContextMenu"
                 Background="{StaticResource PanelBackgroundBrush}"
                 Foreground="{StaticResource TextPrimaryBrush}"
                 BorderBrush="{StaticResource ListBoxBorderBrush}"
                 BorderThickness="1"
                 Padding="0"
                 Margin="0">

                    <ContextMenu.Resources>
                        <!-- 👇 Стиль для самого ContextMenu -->
                        <Style TargetType="ContextMenu">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ContextMenu">
                                        <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="0">
                                            <StackPanel IsItemsHost="True" 
                                            KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <!-- 👇 Стиль для MenuItem -->
                        <Style TargetType="MenuItem">
                            <Setter Property="Padding" Value="10,5,20,5"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="MenuItem">
                                        <Border x:Name="Border"
                                    Background="Transparent"
                                    Padding="{TemplateBinding Padding}"
                                    Margin="0">
                                            <ContentPresenter Content="{TemplateBinding Header}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>

                        <!-- 👇 Стиль для Separator -->
                        <Style TargetType="Separator">
                            <Setter Property="Margin" Value="0,2,0,2"/>
                            <Setter Property="Background" Value="{StaticResource ListBoxBorderBrush}"/>
                        </Style>
                    </ContextMenu.Resources>

                    <!-- Исключить -->
                    <MenuItem x:Name="MenuExclude"
                  Header="🚫 Исключить"
                  Click="MenuExclude_Click"/>

                    <Separator/>

                    <!-- Объединить -->
                    <MenuItem x:Name="MenuCombine"
                              Header="🔗 Объединить"
                              Click="MenuCombine_Click"
                              IsEnabled="False"/>

                    <!-- Установить тег -->
                    <MenuItem x:Name="MenuSetTag"
                              Header="🏷️ Установить тег"
                              Click="MenuSetTag_Click"
                              IsEnabled="False"/>

                    <Separator/>

                    <!-- Сбросить время -->
                    <MenuItem x:Name="MenuResetTime"
                  Header="🔄 Сбросить время"
                  Click="MenuResetTime_Click"/>

                    <Separator/>

                    <!-- Копировать имя -->
                    <MenuItem x:Name="MenuCopyName"
                  Header="📋 Копировать имя"
                  Click="MenuCopyName_Click"/>

                    <!-- Копировать время -->
                    <MenuItem x:Name="MenuCopyTime"
                  Header="📋 Копировать время"
                  Click="MenuCopyTime_Click"/>

                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Foreground" Value="{StaticResource ListBoxTextBrush}"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <!--<Setter Property="Padding" Value="0"/>-->
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource SelectedBackgroundBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Имя процесса (слева) - цвет зависит от статуса -->
                        <TextBlock Grid.Column="0" 
                       Text="{Binding ProcessName}" 
                       VerticalAlignment="Center"
                       FontSize="14"
                       Margin="5,0">
                            <TextBlock.Foreground>
                                <MultiBinding Converter="{StaticResource IsRunningColorConverter}">
                                    <!-- Имя процесса -->
                                    <Binding Path="ProcessName"/>
                                    <!-- Цвет для запущенных (StaticResource!) -->
                                    <Binding Source="{StaticResource RunningProcessTextColorBrush}"/>
                                    <!-- Цвет для остановленных (StaticResource!) -->
                                    <Binding Source="{StaticResource TextPrimaryBrush}"/>
                                </MultiBinding>
                            </TextBlock.Foreground>
                        </TextBlock>

                        <!-- Время (справа) -->
                        <TextBlock Grid.Column="1" 
                       Text="{Binding TimeFormatted}" 
                       VerticalAlignment="Center"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="10,0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Правая панель -->
        <StackPanel Grid.Column="1" Grid.RowSpan="3" Margin="20,10,20,10">

            <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Center" Margin="10,0,10,0">
                <Label Content="Name:" VerticalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14"/>
                <TextBox x:Name="TextBoxProcessName" 
                         Margin="10,0,10,0" 
                         Width="200" 
                         Height="30" 
                         VerticalAlignment="Center" 
                         FontSize="14"
                         Background="{StaticResource TextBoxBackgroundBrush}"
                         Foreground="{StaticResource TextBoxTextBrush}"
                         BorderBrush="{StaticResource TextBoxBorderBrush}"
                         IsReadOnly="False"
                         HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Center" Margin="10,0,10,0">
                <Label Content="Time (seconds):" VerticalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}" FontSize="14"/>
                <TextBox x:Name="TextBoxTimeSeconds" 
                         Margin="10,0,10,0" 
                         Width="200" 
                         Height="30" 
                         VerticalAlignment="Center" 
                         FontSize="14"
                         Background="{StaticResource TextBoxBackgroundBrush}"
                         Foreground="{StaticResource TextBoxTextBrush}"
                         BorderBrush="{StaticResource TextBoxBorderBrush}"
                         HorizontalAlignment="Stretch"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="40" VerticalAlignment="Center" Margin="10,0,10,0">
                <Label Content="Formatted:" VerticalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                <TextBlock x:Name="TextBlockTimeFormatted" 
                           Margin="10,0,10,0" 
                           VerticalAlignment="Center" 
                           FontSize="12"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Center" Margin="10,0,10,10">
                <Button x:Name="ButtonExclude" 
                        Click="ButtonExclude_Click"
                        Width="100" 
                        Height="35" 
                        Margin="10" 
                        Content="Exclude" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Foreground="{StaticResource ButtonTextBrush}"
                        BorderThickness="0"
                        FontSize="13"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource ButtonExcludeBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource ButtonExcludeHoverBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="{StaticResource ButtonExcludePressedBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="ButtonSave" 
                        Click="ButtonSave_Click"
                        Width="100" 
                        Height="35" 
                        Margin="10" 
                        Content="Save" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Foreground="{StaticResource ButtonTextBrush}"
                        BorderThickness="0"
                        FontSize="13"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource ButtonSaveBrush}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource ButtonSaveHoverBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="{StaticResource ButtonSavePressedBrush}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>

        <Button Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2"
                x:Name="ButtonSettings"
                Content="⚙️ Settings"
                Height="35" Width="130"
                Margin="0,0,0,10"
                Foreground="{StaticResource ButtonTextBrush}"
                BorderThickness="0" FontSize="13"
                Click="ButtonSettings_Click"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="{StaticResource ButtonInfoBrush}"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonInfoHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonInfoPressedBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>